model User {
    id        String   @id @unique @default(uuid())
    fullName  String
    email     String   @unique
    password  String
    role      Role
    status    Status
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum Role {
    ADMIN
    CUSTOMER
}

enum Status {
    ACTIVE
    PENDING
    BLOCKED
}
